        android:lineSpacingExtra="5.0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="geade"
        android:textColor="@android:color/white"
